# r2-makros for r4ge
(markMemSymbolic addr bytes name; "#!pipe python3 $HOME/.local/share/radare2/r2pm/git/r4ge/createVariable.py symb $0 $1 $2")
(addHook addr instructions bytes comment; "#!pipe python3 $HOME/.local/share/radare2/r2pm/git/r4ge/createVariable.py hook $0 $1 $2 $3")
(addAssert addr assertions comment; "#!pipe python3 $HOME/.local/share/radare2/r2pm/git/r4ge/createVariable.py assert $0 $1 $2")
(checkStdout content;  "#!pipe python3 $HOME/.local/share/radare2/r2pm/git/r4ge/createVariable.py checkstdout $0")
(createScript name; "#!pipe python3 $HOME/.local/share/radare2/r2pm/git/r4ge/createScript.py $0")
(callFunction retval; "#!pipe python3 $HOME/.local/share/radare2/r2pm/git/r4ge/callFunction.py $0")
(r4ge; "#!pipe python3 $HOME/.local/share/radare2/r2pm/git/r4ge/r4ge.py")
